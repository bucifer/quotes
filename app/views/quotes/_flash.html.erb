<% if flash[:notice] %>
  <p class="alert alert-info">
    <%= flash[:notice] %>  </p>
<% end %>

<% if flash[:success] %>
  <p class="alert alert-success">
    <%= flash[:success] %>  </p>
<% end %>

<% if flash[:alert] %>
  <p class="alert alert-warning">
    <%= flash[:alert] %>  </p>
<% end %>

<% if flash[:danger] %>
  <p class="alert alert-danger">
    <%= flash[:danger] %>  </p>
<% end %>